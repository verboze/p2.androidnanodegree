<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment"
    android:background="#88000000">
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_player_card"
    android:layout_gravity="bottom|center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="8dip"
            android:layout_width="250px"
            android:layout_height="250px"
            android:src="@android:color/holo_green_dark"
            android:id="@+id/imgAlbumArt"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Track Title"
            android:maxLines="1"
            android:id="@+id/txtTrackTitle"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgAlbumArt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dip" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Small Text"
            android:maxLines="1"
            android:id="@+id/txtAlbumTitle"
            android:layout_below="@+id/txtTrackTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/txtTrackTitle"
            android:layout_alignStart="@+id/txtTrackTitle" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_alignBottom="@+id/imgAlbumArt"
            android:layout_alignLeft="@+id/txtAlbumTitle"
            android:layout_toEndOf="@+id/imgAlbumArt">
            <ImageButton
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_skip_previous_black_48dp"
                android:id="@+id/btnPrev" />
            <ToggleButton
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_play_circle_filled_black_48dp"
                android:id="@+id/btnPayPause"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp" />
            <ImageButton
                android:layout_width="0dip"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_skip_next_black_48dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btnNext" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/imgAlbumArt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/elapsedTime"
                android:text="00:08"
                android:layout_height="25dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_marginTop="5px" />
            <SeekBar
                android:id="@+id/musicSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3.80"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/duration"
                android:text="04:41"
                android:layout_height="25dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_marginTop="5px" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</FrameLayout>
